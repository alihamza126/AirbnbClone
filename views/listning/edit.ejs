<%= layout('layouts/boilerplate') %>
<body>
    <div class="row ">
        <div class="col-10 offset-1  col-md-8  offset-md-2">
            <h1 class="mt-2 mb-2">Edit your property</h1>
            <form action="/listning/<%=data._id%>/edit?_method=PUT" class=" needs-validation" method="post" novalidate enctype="multipart/form-data">
                <div class="mt-3">
                    <label for="title" class="form-label">Title</label>
                    <input required type="text" class="form-control" name="listning[title]" placeholder="enter title" value="<%= data.title %>">
                    <div class="invalid-feedback">
                        Title is must!
                    </div>
                </div>
                <div class="mt-3">
                    <label for="description" class="form-label">description</label>
                    <textarea required class="form-control" rows="5"  name="listning[description]" placeholder="enter the description" "><%= data.description%></textarea>
                    <div class="invalid-feedback">
                        description is must!
                    </div>
                </div>
                <div class="mt-3">
                    <label for="price" class="form-label">Price</label>
                    <input required class="form-control" type="number" name="listning[price]" placeholder="enter price" value="<%= data.price %>">
                    <div class="invalid-feedback">
                        Price is must!
                    </div>
                </div>
                <div class="mt-3 ">
                    <img class="rounded-2 shadow-sm hover-overlay hover-zoom " src="<%= imageUrl %>" alt="">
                </div>
                <div class="mt-3">
                    <label for="image" class="form-label">Upload Image</label>
                    <input  class="form-control" type="file" name="listning[image]" value="<%= data.image.url %>">
                    <p><%= data.image.url %></p>
                    <p><%= data.image.filename %></p>
                    <div class="invalid-feedback">
                        Url must Valid!
                    </div>
                </div>
                <div class="row">
                    <div class="mt-3 col-12 col-md-6">
                        <label for="location" class="form-label">location</label>
                        <input required class="form-control" type="text" name="listning[location]" placeholder="enter the location" value="<%= data.location %>">
                        <div class="invalid-feedback">
                            location is must!
                        </div>
                    </div>
                    <div class="mt-3 col-12 col-md-6">
                        <label for="country" class="form-label">country</label>
                        <input required class="form-control" type="text" name="listning[country]" placeholder="enter the coutry name" value="<%= data.country %>">
                        <div class="invalid-feedback">
                            country name is must!
                        </div>
                    </div>
                </div>
                <button class="btn btn-outline-success mb-3 mt-3" type="submit">Update</button>
            </form>
        </div>
      </div>
</body>