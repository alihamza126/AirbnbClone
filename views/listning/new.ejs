<%- layout('/layouts/boilerplate') %>
<body>
   <div class="row">
      <div class="col-8 offset-2">
         <h1 class="m-auto mt-3">Add Property</h1>
         <form
            enctype="multipart/form-data"
            action="/listning/new?_method=PUT"
            class="needs-validation"
            method="post"
            novalidate>
            <div class="mt-3">
               <label for="title" class="form-label">title</label>
               <input
                  required
                  type="text"
                  class="form-control"
                  name="listning[title]"
                  placeholder="enter title" />
               <div class="valid-feedback">Looks good!</div>
               <div class="invalid-feedback">filed is must!</div>
            </div>

            <div class="mt-3">
               <label for="description" class="form-label">description</label>
               <textarea
                  
                  required="true"
                  class="form-control"
                  name="listning[description]">
               </textarea>
               <div class="valid-feedback">Looks good!</div>
               <div class="invalid-feedback">description is must!</div>
            </div>

            <div class="row">
               <div class="col-12 col-md-6">
                  <div class="mt-3">
                     <label for="price" class="form-label">Price</label>
                     <input
                        required
                        class="form-control"
                        name="listning[price]"
                        type="number"
                        placeholder="enter price" />
                     <div class="valid-feedback">Looks good!</div>
                     <div class="invalid-feedback">Price must be Valid!</div>
                  </div>
               </div>
               <div class="col-12 col-md-6">
                  <div class="mt-3">
                     <label for="country" class="form-label">country</label>
                     <input
                        required
                        class="form-control"
                        type="text"
                        name="listning[country]"
                        placeholder="enter the coutry name" />
                     <div class="valid-feedback">Looks good!</div>
                     <div class="invalid-feedback">Cuntry is must!</div>
                  </div>
               </div>
            </div>

            <div class="mt-3">
               <label for="url" class="form-label"></label>
               <input
                  required
                  class="form-control"
                  type="file"
                  name="listning[image]"
                  placeholder="place image" />
               <div class="valid-feedback">Looks good!</div>
               <div class="invalid-feedback">Image URL must Valid!</div>
            </div>

            <div class="mt-3">
               <label for="location" class="form-label">location</label>
               <input
                  required
                  class="form-control"
                  type="text"
                  name="listning[location]"
                  placeholder="enter the location" />
               <div class="valid-feedback">Looks good!</div>
               <div class="invalid-feedback">location is must!</div>
            </div>

            <button type="submit" class="mt-3 mb-2 btn btn-success">Add</button>
         </form>
      </div>
   </div>
</body>
